<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jonatan.clothesplanner.MainActivity">

    <TextView
        android:id="@+id/addItemsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Add items" />

    <EditText
        android:id="@+id/editText_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="@string/add_description"
        android:layout_below="@+id/addItemsTextView"
        android:layout_marginTop="20dp" />

    <Spinner android:id="@+id/wardrobe_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/wardrobe_array"
        android:prompt="@string/wardrobe_array_prompt"
        android:layout_below="@+id/editText_add_item" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:onClick="addWardrobeItem"
        android:layout_below="@+id/wardrobe_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/wardrobeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wardrobe"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:id="@+id/wardrobe_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wardrobeTextView">
    </LinearLayout>

</RelativeLayout>
