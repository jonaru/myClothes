<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lights_background"
    tools:context="com.example.jonatan.clothesplanner.HomeScreenActivity">

    <Button
        android:id="@+id/WeeklyPlanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_plan"
        android:onClick="goToWeeklyPlan"
        style="@android:style/Widget.Button.Inset"
        android:layout_alignBaseline="@+id/WardrobeButton"
        android:layout_alignBottom="@+id/WardrobeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="83dp"
        android:layout_marginEnd="83dp" />

    <Button
        android:id="@+id/WardrobeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_wardrobe"
        android:onClick="goToWardrobe"
        android:layout_marginTop="124dp"
        style="@android:style/Widget.Button.Inset"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
